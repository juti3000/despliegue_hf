@model Habitforger.Models.Habito

@{
    ViewData["Title"] = "Editar Hábito";
}

<h1>Editar Hábito</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdHabito" />

            <div class="form-group mb-3">
                <label asp-for="TituloHabito" class="control-label">Nombre del hábito</label>
                <input asp-for="TituloHabito" class="form-control" />
                <span asp-validation-for="TituloHabito" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Objetivo" class="control-label">Objetivo (días totales)</label>
                <input asp-for="Objetivo" class="form-control" min="1" />
                <span asp-validation-for="Objetivo" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Frecuencia" class="control-label">Frecuencia</label>
                <select asp-for="Frecuencia" class="form-control">
                    <option value="1">Diario</option>
                    <option value="7">Semanal</option>
                    <option value="30">Mensual</option>
                </select>
                <span asp-validation-for="Frecuencia" class="text-danger"></span>
            </div>

            <div class="form-group form-check mb-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HacerPrivado" /> @Html.DisplayNameFor(model => model.HacerPrivado)
                </label>
            </div>

            <div class="form-group mb-3">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Estadísticas actuales</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-6">Días completados:</dt>
                    <dd class="col-sm-6">@Model.DiasCompletados</dd>

                    <dt class="col-sm-6">Días fallados:</dt>
                    <dd class="col-sm-6">@Model.DiasFallados</dd>

                    <dt class="col-sm-6">Racha actual:</dt>
                    <dd class="col-sm-6">@Model.RachaActual días</dd>

                    <dt class="col-sm-6">Máxima racha:</dt>
                    <dd class="col-sm-6">@Model.MaximaRacha días</dd>

                    <dt class="col-sm-6">Progreso:</dt>
                    <dd class="col-sm-6">@Model.Progreso.ToString("0.00")%</dd>

                    <dt class="col-sm-6">Creado el:</dt>
                    <dd class="col-sm-6">@Model.FechaCreacion.ToShortDateString()</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}